{
  "openapi": "3.1.0",
  "info": {
    "title": "sample api",
    "version": "1.0.0"
  },
  "paths": {
    "/ping": {
      "get": {
        "tags": [
          "ping"
        ],
        "summary": "returns a single \"pong\" string.",
        "description": "very simple sample endpoint",
        "responses": {
          "200": {
            "description": "pong",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/echo": {
      "get": {
        "tags": [
          "echo"
        ],
        "summary": "echos the given parameter string.",
        "description": "sample endpoint with parameter",
        "parameters": [
          {
            "name": "source",
            "description": "query, required, string",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "echo of the source parameter",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
