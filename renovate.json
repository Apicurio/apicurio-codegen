{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "maven"
  ],
  "dependencyDashboard": true,
  "rangeStrategy": "bump",
  "ignorePaths": [
    "maven-plugin-tests/src/it/**",
    "maven-plugin-tests/target/**",
    "core/src/main/resources/**",
    "core/src/test/resources/**"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "groupName": "Dependencies: All",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "Dependencies: All (major)",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "major"
      ],
      "schedule": [ "* 0 1 * *" ]
    },
    {
      "groupName": "Dependencies: Maven Plugins",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "matchPackageNames": [
        "org.apache.maven*:*"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "Dependencies: Jackson",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "matchPackageNames": [
        "com.fasterxml.jackson*:*"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "Dependencies: Commons",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "matchPackageNames": [
        "*commons*:*"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "Dependencies: Quarkus",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "matchPackageNames": [
        "*quarkus*:*"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "Dependencies: Apicurio Data Models",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "matchPackageNames": [
        "io.apicurio:*"
      ]
    },
    {
      "groupName": "Dependencies: Roaster (disabled)",
      "matchFileNames": [
        "**/pom.xml"
      ],
      "matchPackageNames": [
        "org.jboss.forge.roaster:*"
      ],
      "enabled": false
    }
  ]
}
